<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/green">

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/visit_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/avatar"/>

    <TextView
        android:id="@+id/visit_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_below="@id/visit_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/visit_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hey i'm using Hi! Chat App"
        android:layout_below="@id/visit_user_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textAllCaps="false"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/send_reques_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/visit_status"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textColor="@color/white"
        app:fButtonColor="@color/green"
        app:shadowEnabled="false"
        app:cornerRadius="4dp"
        android:textStyle="bold"
        android:text="Send Request"
        android:textSize="15sp"
        android:textAllCaps="false"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/decline_request_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_reques_btn"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textColor="@color/white"
        app:fButtonColor="@color/green"
        app:shadowEnabled="false"
        app:cornerRadius="4dp"
        android:textStyle="bold"
        android:text="Cancel Request"
        android:visibility="invisible"
        android:textSize="15sp"
        android:textAllCaps="false"/>

</RelativeLayout>